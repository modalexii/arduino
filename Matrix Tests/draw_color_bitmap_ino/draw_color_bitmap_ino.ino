#include <Adafruit_GFX.h>
#include <Adafruit_NeoMatrix.h>
#include <Adafruit_NeoPixel.h>
#ifndef PSTR
 #define PSTR // Make Arduino Due happy
#endif

#define DATA_PIN 6

int MATRIX_WIDTH = 18;
int MATRIX_HEIGHT = 8;

Adafruit_NeoMatrix matrix = Adafruit_NeoMatrix(
  MATRIX_WIDTH,
  MATRIX_HEIGHT,
  DATA_PIN,
  NEO_MATRIX_BOTTOM + NEO_MATRIX_LEFT +
  NEO_MATRIX_ROWS   + NEO_MATRIX_ZIGZAG,
  NEO_RGB           + NEO_KHZ800 
);

int bmp[8][18] = {
  // 0xAABBCC = R=AA,G=BB,B=CC
  {0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000},
  {0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x000000,0x0000f8,0x0000f8,0x000000},
  {0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8},
  {0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x000000,0x0000f8,0x0000f8,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x000000},
  {0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x000000,0x000000},
  {0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x0000f8,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x000000,0x000000,0x000000},
  {0x000000,0x000000,0x000000,0x000000,0x0000f8,0x0000f8,0x0000f8,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000},
  {0x000000,0x000000,0x000000,0x000000,0x000000,0x0000f8,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000,0x000000}
};

void setup(){
  matrix.begin();
  matrix.setBrightness(80);
  Serial.begin(9600);
}


void loop(){
  matrix.fillScreen(0);
  for(int x = 0; x <= MATRIX_WIDTH; x++) {
    for(int y = 0; y <= MATRIX_HEIGHT; y++) {
      matrix.drawPixel(x,y,bmp[y][x]);
    }
  }
  matrix.show();
  delay(999999);
}
